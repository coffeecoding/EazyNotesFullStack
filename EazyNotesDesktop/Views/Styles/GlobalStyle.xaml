<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2">

    <FontFamily x:Key="DefaultFont">Segoe UI Symbol</FontFamily>
    <!--<FontFamily x:Key="DefaultFont">Roboto</FontFamily>-->

    <LinearGradientBrush x:Key="DefaultOpacityMask" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Offset="0" Color="#FFFFFFFF" />
        <GradientStop Offset="0.8" Color="#FFFFFFFF" />
        <GradientStop Offset="1" Color="#00FFFFFF" />
    </LinearGradientBrush>

    <Thickness x:Key="SettingSeparatorHeight">0,20,0,0</Thickness>
    <Thickness x:Key="SettingGridMargin">20</Thickness>
    <Thickness x:Key="SettingInnerGapVertical">0,8,0,0</Thickness>
    <GridLength x:Key="SettingButtonColumnWidth">100</GridLength>

</ResourceDictionary>